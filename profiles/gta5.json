{
  "name": "gta5",
  "target_process": "GTA5_Enhanced.exe",
  "window_title_contains": "Grand Theft Auto V",

  "aliases": {
    "look up": "look_up",
    "look down": "look_down",
    "look right": "look_right",
    "look left": "look_left",

    "aim up": "aim_up",
    "aim down": "aim_down",
    "aim right": "aim_right",
    "aim left": "aim_left",

    "walk": "walk",
    "drive": "drive",
    "left": "left",
    "right": "right",
    "reverse": "reverse",
    "stop": "stop",
    "brake": "brake",

    "shoot": "shoot",
    "cover": "cover",
    "camera": "camera",
    "honk": "honk",
    "lights": "lights",
    "radio next": "radio_next",
    "enter": "enter",

    "wheel": "open_weapon_wheel",

    "unarmed": "weap_unarmed",
    "melee": "weap_melee",
    "shotgun": "weap_shotgun",
    "heavy": "weap_heavy",
    "throwable": "weap_throwable",
    "pistol": "weap_pistol",
    "smg": "weap_smg",
    "rifle": "weap_rifle",
    "sniper": "weap_sniper"
  },

  "macros": {
    "walk":   [{ "type": "key_pulse", "key": "W", "duration_ms": 2000 }],
    "drive":   [{ "type": "key_pulse", "key": "W", "duration_ms": 1000 }],
    "left":   [{ "type": "key_pulse", "key": "A", "duration_ms": 2000 }],
    "right":  [{ "type": "key_pulse", "key": "D", "duration_ms": 2000 }],
    "reverse":[{ "type": "key_pulse", "key": "S", "duration_ms": 1000 }],
    "stop":   [{ "type": "key_release", "keys": ["W","S"] }],
    "brake":  [{ "type": "key_pulse", "key": "SPACE", "duration_ms": 700 }],

    "shoot":  [{ "type": "mouse_click", "button": "left" }],
    "cover":  [{ "type": "key_tap", "key": "Q" }],

    "look_up":    [{ "type": "mouse_move", "dx": 0, "dy": -30 }],
    "look_down":  [{ "type": "mouse_move", "dx": 0, "dy": 30 }],
    "look_right": [{ "type": "mouse_move", "dx": 200, "dy": 0 }],
    "look_left":  [{ "type": "mouse_move", "dx": -200, "dy": 0 }],

    "aim_up":   [{ "type": "mouse_down", "button": "right" }, { "type": "mouse_move", "dx": 0, "dy": -30 }, { "type": "mouse_up", "button": "right" }],
    "aim_down": [{ "type": "mouse_down", "button": "right" }, { "type": "mouse_move", "dx": 0, "dy": 30 },  { "type": "mouse_up", "button": "right" }],
    "aim_right":[ { "type": "mouse_down", "button": "right" }, { "type": "mouse_move", "dx": 200, "dy": 0 }, { "type": "mouse_up", "button": "right" }],
    "aim_left": [ { "type": "mouse_down", "button": "right" }, { "type": "mouse_move", "dx": -200, "dy": 0 },{ "type": "mouse_up", "button": "right" }],

    "honk":       [{ "type": "key_tap", "key": "E" }],
    "lights":     [{ "type": "key_tap", "key": "H" }],
    "radio_next": [{ "type": "key_tap", "key": "." }],
    "camera":     [{ "type": "key_tap", "key": "V" }],
    "enter":      [{ "type": "key_tap", "key": "F" }],

    "open_weapon_wheel": [{ "type": "key_combo", "keys": ["TAB"], "duration_ms": 800 }],

    "weap_unarmed":   [{ "type": "key_pulse", "key": "1", "duration_ms": 60 }],
    "weap_melee":     [{ "type": "key_pulse", "key": "2", "duration_ms": 60 }],
    "weap_shotgun":   [{ "type": "key_pulse", "key": "3", "duration_ms": 60 }],
    "weap_heavy":     [{ "type": "key_pulse", "key": "4", "duration_ms": 60 }],
    "weap_throwable": [{ "type": "key_pulse", "key": "5", "duration_ms": 60 }],
    "weap_pistol":    [{ "type": "key_pulse", "key": "6", "duration_ms": 60 }],
    "weap_smg":       [{ "type": "key_pulse", "key": "7", "duration_ms": 60 }],
    "weap_rifle":     [{ "type": "key_pulse", "key": "8", "duration_ms": 60 }],
    "weap_sniper":    [{ "type": "key_pulse", "key": "9", "duration_ms": 60 }]
  }
}
